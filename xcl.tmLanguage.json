{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "XCL",
    "scopeName": "source.xcl",
    "fileTypes": ["xcl"],
    "patterns": [
        {
            "name": "keyword.control.xcl",
            "match": "\\b(if|else|kernel|return|int|float|matrix|vector|global|local|shared|for|while|switch|case|break|continue|default)\\b"
        },
        {
            "name": "storage.type.xcl",
            "match": "\\b(int|float|matrix|vector|char|short|long|double|bool|uint|uchar|ulong|ushort|image2d_t|image3d_t|sampler_t)\\b"
        },
        {
            "name": "variable.other.xcl",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
            "name": "constant.numeric.xcl",
            "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        },
        {
            "name": "comment.line.xcl",
            "match": "//.*$"
        },
        {
            "name": "comment.block.xcl",
            "begin": "/\\*",
            "end": "\\*/"
        },
        {
            "name": "keyword.operator.xcl",
            "match": "(\\+|-|\\*|/|%|=|==|!=|<|>|<=|>=|~|!|&|&&|\\||\\|\\||\\^|<<|>>|\\.|\\(|\\)|\\[|\\]|\\{|\\}|;|,)"
        }
    ],
    "repository": {}
}